<Window x:Class="PictionaryMusicalCliente.Vista.ConfirmacionSalirPartida"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.ajustesPartidaTextoSalirPartida}"
        Height="260" Width="360"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="300">

                <TextBlock Text="{x:Static language:Lang.ajustesPartidaTextoSalirPartida}" 
                           FontFamily="Comic Sans MS" FontSize="22" FontWeight="Bold"
                           TextAlignment="Center" Width="282" Height="50"/>

                <TextBlock Text="{x:Static language:Lang.salirPartidaTextoConfirmación}"
                           FontFamily="Comic Sans MS" FontSize="14" FontWeight="Bold"
                           TextAlignment="Center" Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="botonAceptarSalirPartida"
                            Grid.Column="0" Height="44" Margin="0,0,6,0"
                            Content="{x:Static language:Lang.globalTextoAceptar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Command="{Binding AceptarComando}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="Red"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="botonCancelarSalirPartida"
                            Grid.Column="1" Height="44" Margin="6,0,0,0"
                            Content="{x:Static language:Lang.globalTextoCancelar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Command="{Binding CancelarComando}"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>