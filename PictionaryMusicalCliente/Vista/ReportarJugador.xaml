<Window x:Class="PictionaryMusicalCliente.Vista.ReportarJugador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.reportarJugadorTextoTitulo}"
        Height="290" Width="360"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        ShowInTaskbar="False">
    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel MinWidth="300" MaxWidth="320">
                <TextBlock Text="{x:Static language:Lang.reportarJugadorTextoTitulo}"
                           FontFamily="Comic Sans MS" FontSize="18" FontWeight="Bold"
                           TextAlignment="Center" Margin="0,0,0,6"/>

                <TextBlock Text="{Binding DescripcionReporte}"
                           FontFamily="Comic Sans MS" FontSize="14"
                           TextAlignment="Center" TextWrapping="Wrap"
                           Margin="0,0,0,12"/>

                <TextBlock Text="{x:Static language:Lang.reportarJugadorTextoMotivoEtiqueta}"
                           FontFamily="Comic Sans MS" Margin="0,0,0,4"/>

                <TextBox x:Name="campoMotivoReporte" Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True" Height="80" MaxLength="100"
                         TextWrapping="Wrap" FontFamily="Comic Sans MS"/>

                <TextBlock Text="{Binding MensajeError}" Foreground="Red"
                           FontFamily="Comic Sans MS" FontSize="12"
                           Margin="0,6,0,0" TextWrapping="Wrap"/>

                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="botonConfirmarReporte"
                            Grid.Column="0" Height="40" Margin="0,0,6,0"
                            Content="{x:Static language:Lang.reportarJugadorTextoConfirmar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Command="{Binding ReportarComando}"/>

                    <Button x:Name="botonCancelarReporte"
                            Grid.Column="1" Height="40" Margin="6,0,0,0"
                            Content="{x:Static language:Lang.globalTextoCancelar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Command="{Binding CancelarComando}" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>