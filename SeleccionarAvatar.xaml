<Window x:Class="PictionaryMusicalCliente.SeleccionarAvatar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.globalTextoSeleccionarAvatar}"
        Height="460" Width="380"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3">
            <StackPanel>
                <ListBox x:Name="listaAvatares" BorderThickness="0" SelectionMode="Single">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="8" CornerRadius="40" BorderBrush="LightGray" BorderThickness="1">
                                <Image Source="{Binding}" Width="72" Height="72" Stretch="UniformToFill"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button x:Name="botonAceptarSeleccionAvatar"
                        Content="{x:Static language:Lang.globalTextoAceptar}"
                        Margin="0,14,0,0" Height="40" Width="140"
                        HorizontalAlignment="Center"
                        FontFamily="Comic Sans MS" FontWeight="Bold"
                        Background="White" BorderBrush="Black"
                        Click="BotonAceptarSeleccionAvatar"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

